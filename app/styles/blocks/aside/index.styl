.aside
  flex-basis 30%
  background-color #39435c

  &__header
    text-transform uppercase
    font-size 20px
    color #fff
    padding 25px
    background-color #4b5771

  &__menu
    color #b8beca

    &-element
      background-color #424963
      padding 10px
      margin-top 1px
      cursor pointer
      transition all .4s ease

      &:hover
      &.active
        background-color #31364a

      i
        width 40px
        height 40px
        margin-right 10px
        background-color #000
        font-size 20px
        text-align center
        line-height 40px
        border-radius 4px

      span
        vertical-align middle

  &__add
    padding 10px 25px
