.valute
  display inline-block
  margin-right 30px

  span
    display inline-block
    vertical-align middle

  &__icon
    width 40px
    height 40px
    margin-right 10px
    text-align center
    line-height 40px
    color #fff
    border-radius 4px

    &--red
      background-color #f34f4d

    &--blue
      background-color #23b7e5

    &--green
      background-color #28c14d
