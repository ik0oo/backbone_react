.table
  margin-bottom 30px

  &__header
    margin-bottom 20px
    font-size 16px
    text-transform uppercase

  &__item
    width 265px
    white-space pre
    padding-bottom 10px
    margin-bottom 10px
    color #666
    font-weight 100
    border-bottom 1px dotted #999

    &-sum
      display inline-block
      width 250px


    &-close
      display inline-block
      width 15px
      height 15px
      background-color #999
      color #fff
      text-align center
      font-family sans-serif
      font-size 12px
      line-height 15px
      border-radius 100%
      cursor pointer
